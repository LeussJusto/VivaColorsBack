{
  "compilerOptions": {
    /* Directorios */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Configuración de Node.js */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "Node16",                  
    "moduleResolution": "Node16",        
    "esModuleInterop": true,

    /* Mapas y compilación */
    "sourceMap": true,
    "declaration": false,

    /* Tipos */
    "types": ["node", "express", "jest"],

    /* Reglas estrictas */
    "strict": true,
    "skipLibCheck": true,

    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
